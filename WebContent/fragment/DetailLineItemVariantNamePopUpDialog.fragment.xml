<core:FragmentDefinition
  xmlns="sap.m"
  xmlns:l="sap.ui.layout"
  xmlns:core="sap.ui.core"
  xmlns:app="http://schemas.sap.com/sapui5/extension/sap.ui.core.CustomData/1">
  <Dialog title="Variant Name Confirmation" id="NewViaAddress" contentWidth="300px">
   
    <Label text="Please Enter Variant Name" />
    <Input id="idVariantName" value=" " editable="true"/>
  <l:HorizontalLayout class="sapUiSmallMargin" >
    <CheckBox id="idVariantDefault" text="Set as Default" />
    <CheckBox id="idVariantGlobal"  text="Set as Global" />
  </l:HorizontalLayout>   
    <beginButton>
      <Button text="Save" icon="sap-icon://save" app:dialogType="Msg" press=".handleVariantNameSave" />
   </beginButton>
    <endButton>
       <Button text="Cancel" icon="sap-icon://sys-cancel" app:dialogType="Msg" press="handleVariantNameCancel" />
    </endButton>
  </Dialog>
</core:FragmentDefinition>    